<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script defer src="/js/customers.js"></script>

<h2>Customers Table</h2>
<p>Browse customer information.</p>
<table class="displayTable" id="customer-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.customerID}}>
            <td>{{this.customerID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>
                <button onclick="deleteCustomer({{this.customerID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


<h2>Add a customer</h2>
<form id="add-customer-form" method="POST" action="/add-customer">
    <table class="addTable">
        <tbody>
            <tr>
                <td>
                    <label for="firstName">First Name:</label>
                </td>
                <td>
                    <input autofocus type="text" id="addFirstName" name="firstName" maxlength="255" required />
                </td>
                <td class="errorColumn">
                    <div id="addFirstNameError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="lastName">Last Name:</label>
                </td>
                <td>
                    <input type="text" id="addLastName" name="lastName" maxlength="255" required />
                </td>
                <td class="errorColumn">
                    <div id="addLastNameError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email">Email:</label>
                </td>
                <td>
                    <input type="text" id="addEmail" name="email" required />
                </td>
                <td class="errorColumn">
                    <div id="addEmailError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="phone">Phone:</label>
                </td>
                <td>
                    <input type="text" id="addPhone" name="phone" required />
                </td>
                <td class="errorColumn">
                    <div id="addPhoneError"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <button disabled style="background-color: gray; color: white; cursor: not-allowed;" class="addButton" type="button" onclick="addCustomer()">
        Add customer
    </button>
</form>
