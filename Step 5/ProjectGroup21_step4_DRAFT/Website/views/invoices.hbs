<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script defer src="/js/invoices.js"></script>

<h2>Invoices Table</h2>
<p>Record of transactions made by the customers.</p>
<table class="displayTable">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Date</th>
            <th>Book</th>
            <th>Store</th>
            <th>Customer</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.invoiceID}}</td>
            <td>{{this.date}}</td>
            <td>{{this.title}}</td>
            <td>{{this.name}}</td>
            <td>{{this.customerName}}</td>
            <td>
                <button onclick="deleteInvoice({{this.invoiceID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


<h2>Add Invoice</h2>
<form id="add-invoice-form">
    <table class="addTable">
        <tbody>
            <tr>
                <td>
                    <label for="date">Date:</label>
                </td>
                <td>
                    <input autofocus type="date" id="addDate" name="date" required />
                </td>
                <td class="errorColumn">
                    <div id="addDateError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="book">Title:</label>
                </td>
                <td>
                    <select id="addBook" name="booklist" required>
                        <option value="NULL" selected>
                            None
                        </option>
                    </select>
                </td>
                <td class="errorColumn">
                    <div id="addBookError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="store">Store:</label>
                </td>
                <td>
                    <select id="addStore" name="store" required>
                        <option value="NULL" selected>
                            None
                        </option>
                    </select>
                </td>
                <td class="errorColumn">
                    <div id="addStoreError"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="customer">Customer:</label>
                </td>
                <td>
                    <select id="addCustomer" name="customer" required>
                        <option value="NULL" selected>
                            None
                        </option>
                    </select>
                </td>
                <td class="errorColumn">
                    <div id="addCustomerError"></div>
                </td>
            </tr>
        </tbody>
    </table>
    <button disabled style="background-color: gray; color: white; cursor: not-allowed;" class="addButton" type="button" onclick="addInvoice()">
        Add Invoice
    </button>
</form>